import java.io.File;
import java.util.Scanner;

public class CLI {

	static String samples = "src/samples";
	
	public static void main(String[] args) {
		
		runCLI();
	}
	
	private static void runCLI() {
		Scanner scanner = new Scanner(System.in);
		while (true) {
			System.out.print("Command (h - help): ");
			String input = scanner.nextLine();
			switch (input) {
			case "h":
				showHelp();
				break;
			case "e": // exit
				return;
			case "f":
				showFiles();
				break;
			case "t":
				testFile();
				break;
			default:
				System.out.println("Unknown command");
			}
		}
	}
	
	private static void showFiles() {
		File folder = new File(samples);
		File[] listOfFiles = folder.listFiles();
		
		for (File file : listOfFiles) {
			if (file.isFile()) {
				System.out.println(file.getName());
			}
		}
	}

	private static void showHelp() {
		System.out.println("Help:\n"
				+ " h - show help\n"
				+ " f - show sample files\n"
				+ " t - test a file\n"
				+ " e - exit");
	}
	
	private static void testFile() {
		System.out.println("All files (from sample folder):");
		showFiles();
		System.out.println("Enter the name of the file which will test: ");
		Scanner scanner = new Scanner(System.in);
		String fileName = scanner.nextLine();
		if (checkFileName(fileName)) {
			
		} else {
			
		}
	}
	
	private static boolean checkFileName(String fileName) {
		File folder = new File(samples);
		File[] listOfFiles = folder.listFiles();
		
		for (File file : listOfFiles) {
			if (file.isFile() && file.getName().equals(fileName)) {
				return true;
			}
		}
		return false;
	}
	
	
	
}
